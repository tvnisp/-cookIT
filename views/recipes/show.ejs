<% include ../partials/header %>

<header class="rec-back-show">
    <div class="container-show">
        <div class="show">
            <div class="show-img">
                <img src="<%=recipe.image%>">
            </div>
            <div class="show-text">
                <h2>Recipe: <%=recipe.name%> <i class="fas fa-angle-left"></i></h2>
                <h5>by: <%=recipe.author%></h5>
                <p><%=recipe.body%></p>
                <p><span>Published: <%=recipe.date.toDateString()%></span></p>
                <div class="show-nav">
                    <a href="/recipes">Go Back</a>
                    <a href="/recipes/<%=recipe._id%>/edit">Edit</a>
                    <form action="/recipes/<%=recipe._id%>?_method=DELETE" method="post">
                        <button><a href="#">Delete</a></button>
                    </form>
                </div>
            </div>
        </div>
        <div class="show">
            <div class="comments">
                <div class="row">
                    <h1>Comments</h1>
                    <a href="/recipes/<%=recipe._id%>/comments/new">Add a new Comment</a>
                </div>
                <%recipe.comments.forEach(function(comment){%>
                    <p>
                        <strong><%= comment.author %></strong> - <%=comment.text%>
                    </p>
                <%})%>
            </div>
        </div>
    </div>
</header>


<% include ../partials/footer %>