<% include ../partials/header%>
<div id="index">
    <h1 class="new-rec-header">Edit <%=recipe.name%></h1>
    <div class="form-rec-new">
        <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
            <input type="text" name="recipe[name]" value="<%=recipe.name%>">        
            <input type="text" name="recipe[author]" value="<%=recipe.author%>">
            <input type="text" name="recipe[image]" value="<%=recipe.image%>">
            <input type="text" name="recipe[body]" value="<%=recipe.body%>">
            <input type="submit" value="Submit">
        </form>
    </div>
</div>

<% include ../partials/footer %>