<% include ../partials/header%>

<header class="padding-back">
    <div class="container">
        <form class="all-inputs" action="/recipes" method="POST">
            <h1>Add new recipe</h1>
            <input type="text" name="recipe[name]" placeholder="Recipe Name" required>        
            <input type="text" name="recipe[author]" placeholder="Author" required>
            <input type="text" name="recipe[image]" placeholder="Image Url" required>
            <input type="text" name="recipe[body]" placeholder="Description" required>
            <input type="submit" value="Submit">
            <div class="small-nav">
                <a href="/recipes">Go Back</a>
            </div>
        </form>
    </div>
</header>


