<% include ../partials/header%>

<header class="rec-back-show">
    <div class="container">
        <form class="new-recipe" action="/recipes/<%=recipe._id%>/comments" method="POST">
            <h1>Comment: <%=recipe.name%></h1>
            <input type="text" name="comment[author]" placeholder="Author" required>
            <input type="text" name="comment[text]" placeholder="Description" required>
            <input type="submit" value="Submit">
            <div class="show-nav">
                <a href="/recipes/<%= recipe._id%>">Back</a>
            </div>
        </form>
    </div>
</header>


